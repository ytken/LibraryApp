<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingEnd="20dp"
    android:theme="@style/Theme.LibraryApp"
    android:background="@color/primaryWhite"
    tools:context=".AskAgeActivity">

    <Button
        android:id="@+id/buttonSetDate"
        android:layout_width="130dp"
        android:layout_height="45dp"
        android:fontFamily="@font/marta"
        android:text="Принять"
        android:textColor="@color/primaryWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextSetDate"
        app:layout_constraintVertical_bias="0.15" />

    <TextView
        android:id="@+id/textAgeDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/marta"
        android:gravity="center"
        android:text="BirthDate"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/primaryBlack"
        app:layout_constraintBottom_toTopOf="@+id/editTextSetDate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8" />

    <EditText
        android:id="@+id/editTextSetDate"
        style="@style/MyDatePicker"
        android:layout_width="191dp"
        android:layout_height="46dp"
        android:gravity="center"
        android:hint="дд.мм.гггг"
        android:inputType="date"
        android:textColor="@color/primaryPurple"
        android:textSize="@dimen/words_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>