<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageBackgr"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/white" />

    <ImageView
        android:id="@+id/imageWords"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.609"
        app:srcCompat="@drawable/words_author_exp" />

    <TextView
        android:id="@+id/textWords"
        android:layout_width="198dp"
        android:layout_height="266dp"
        android:fontFamily="@font/marta"
        android:gravity="center_vertical"
        android:padding="20dp"
        android:text="@string/hint_click_first_story"
        android:textColor="@color/primaryBlack"
        android:textSize="@dimen/words_text_size"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/imageWords"
        app:layout_constraintEnd_toEndOf="@+id/imageWords"
        app:layout_constraintHorizontal_bias="0.594"
        app:layout_constraintStart_toStartOf="@+id/imageWords"
        app:layout_constraintTop_toTopOf="@+id/imageWords"
        app:layout_constraintVertical_bias="0.484" />

    <ImageView
        android:id="@+id/imageViewLeft"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="1dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/words_left_pers_exp" />

    <TextView
        android:id="@+id/textViewLeft"
        android:layout_width="196dp"
        android:layout_height="99dp"
        android:elevation="1dp"
        android:fontFamily="@font/marta"
        android:gravity="center"
        android:textColor="@color/primaryBlack"
        android:textSize="@dimen/names_text_size"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.392"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.765" />

    <ImageView
        android:id="@+id/imageViewRight"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="1dp"
        android:visibility="invisible"
        app:srcCompat="@drawable/words_right_pers_exp"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="40dp" />

    <TextView
        android:id="@+id/textViewRight"
        android:layout_width="218dp"
        android:layout_height="102dp"
        android:elevation="1dp"
        android:fontFamily="@font/marta"
        android:gravity="center"
        android:textColor="@color/primaryBlack"
        android:textSize="@dimen/names_text_size"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.686"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.767" />

    <TextView
        android:id="@+id/textViewNameSpeaker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/marta"
        android:text="TextView"
        android:textColor="@color/primaryBlue"
        android:textSize="@dimen/words_text_size"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.134" />

    <TextView
        android:id="@+id/dialogClick"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="5dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/imageBackgr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButtonLeftChoice"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:elevation="8dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageButtonRightChoice"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.545"
        app:srcCompat="@drawable/words_left_pers_exp" />

    <ImageButton
        android:id="@+id/imageButtonRightChoice"
        android:layout_width="242dp"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:background="@color/transparent"
        android:elevation="8dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageButtonLeftChoice"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/words_left_pers_exp" />

    <TextView
        android:id="@+id/textViewLeftChoice"
        android:layout_width="128dp"
        android:layout_height="58dp"
        android:elevation="9dp"
        android:fontFamily="@font/marta"
        android:gravity="center"
        android:textColor="@color/primaryBlack"
        android:textSize="@dimen/choice_text_size"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/imageButtonLeftChoice"
        app:layout_constraintEnd_toEndOf="@+id/imageButtonLeftChoice"
        app:layout_constraintHorizontal_bias="0.339"
        app:layout_constraintStart_toStartOf="@+id/imageButtonLeftChoice"
        app:layout_constraintTop_toTopOf="@+id/imageButtonLeftChoice"
        app:layout_constraintVertical_bias="0.653" />

    <TextView
        android:id="@+id/textViewRightChoice"
        android:layout_width="126dp"
        android:layout_height="57dp"
        android:elevation="9dp"
        android:fontFamily="@font/marta"
        android:gravity="center"
        android:textColor="@color/primaryBlack"
        android:textSize="@dimen/choice_text_size"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/imageButtonRightChoice"
        app:layout_constraintEnd_toEndOf="@+id/imageButtonRightChoice"
        app:layout_constraintHorizontal_bias="0.284"
        app:layout_constraintStart_toStartOf="@+id/imageButtonRightChoice"
        app:layout_constraintTop_toTopOf="@+id/imageButtonRightChoice"
        app:layout_constraintVertical_bias="0.651" />

    <TextView
        android:id="@+id/clickerInner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="15dp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/imageViewMan"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/charlie_cut" />

    <ImageView
        android:id="@+id/imageViewWoman"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/lia_cut" />

    <ImageView
        android:id="@+id/imageViewChar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/stiven_cut" />

    <ImageButton
        android:id="@+id/story_button_back_story"
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:background="@android:color/transparent"
        android:elevation="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/button_back_exp" />

</androidx.constraintlayout.widget.ConstraintLayout>