<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageBackgr"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="fitXY"
        app:srcCompat="@color/white" />

    <ImageView
        android:id="@+id/imageWords"
        android:layout_width="350dp"
        android:layout_height="883dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.609"
        app:srcCompat="@drawable/words_author"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/textWords"
        android:layout_width="198dp"
        android:layout_height="266dp"
        android:fontFamily="@font/marta"
        android:gravity="center_vertical"
        android:padding="20dp"
        android:text="@string/hint_click_first_story"
        android:textSize="@dimen/words_text_size"
        android:textColor="@color/primaryBlack"
        app:layout_constraintBottom_toBottomOf="@+id/imageWords"
        app:layout_constraintEnd_toEndOf="@+id/imageWords"
        app:layout_constraintHorizontal_bias="0.645"
        app:layout_constraintStart_toStartOf="@+id/imageWords"
        app:layout_constraintTop_toTopOf="@+id/imageWords"
        app:layout_constraintVertical_bias="0.485"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/imageViewLeft"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/words_left_pers"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/textViewLeft"
        android:layout_width="175dp"
        android:layout_height="88dp"
        android:fontFamily="@font/marta"
        android:gravity="center"
        android:textSize="@dimen/names_text_size"
        android:elevation="1dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.627" />

    <ImageView
        android:id="@+id/imageViewRight"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/words_right_pers"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="40dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/textViewRight"
        android:layout_width="186dp"
        android:layout_height="79dp"
        android:fontFamily="@font/marta"
        android:gravity="center"
        android:textSize="@dimen/names_text_size"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.631" />

    <TextView
        android:id="@+id/textViewNameSpeaker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/marta"
        android:text="TextView"
        android:textColor="@color/primaryBlue"
        android:textSize="@dimen/words_text_size"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.134" />

    <TextView
        android:id="@+id/dialogClick"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageBackgr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"/>

    <ImageButton
        android:id="@+id/imageButtonLeftChoice"
        android:layout_width="195dp"
        android:layout_height="850dp"
        android:background="@color/transparent"
        android:elevation="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageButtonRightChoice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/words_left_pers" />

    <ImageButton
        android:id="@+id/imageButtonRightChoice"
        android:layout_width="202dp"
        android:layout_height="831dp"
        android:background="@color/transparent"
        android:elevation="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageBackgr"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/words_left_pers" />

    <TextView
        android:id="@+id/textViewLeftChoice"
        android:layout_width="136dp"
        android:layout_height="63dp"
        android:elevation="9dp"
        android:fontFamily="@font/marta"
        android:gravity="center"
        android:textColor="@color/primaryBlack"
        android:textSize="@dimen/choice_text_size"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/imageButtonLeftChoice"
        app:layout_constraintEnd_toEndOf="@+id/imageButtonLeftChoice"
        app:layout_constraintHorizontal_bias="0.406"
        app:layout_constraintStart_toStartOf="@+id/imageButtonLeftChoice"
        app:layout_constraintTop_toTopOf="@+id/imageButtonLeftChoice"
        app:layout_constraintVertical_bias="0.589" />

    <TextView
        android:id="@+id/textViewRightChoice"
        android:layout_width="136dp"
        android:layout_height="63dp"
        android:elevation="9dp"
        android:fontFamily="@font/marta"
        android:gravity="center"
        android:textColor="@color/primaryBlack"
        android:textSize="@dimen/choice_text_size"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/imageButtonRightChoice"
        app:layout_constraintEnd_toEndOf="@+id/imageButtonRightChoice"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="@+id/imageButtonRightChoice"
        app:layout_constraintTop_toTopOf="@+id/imageButtonRightChoice"
        app:layout_constraintVertical_bias="0.595" />

    <TextView
        android:id="@+id/clickerInner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="15dp"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/imageViewMan"
        android:layout_width="214dp"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/charlie_full_lar" />

    <ImageView
        android:id="@+id/imageViewWoman"
        android:layout_width="246dp"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/lia_full_lar" />

</androidx.constraintlayout.widget.ConstraintLayout>