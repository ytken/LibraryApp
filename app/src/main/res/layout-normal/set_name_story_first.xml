<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/story_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/story_button_back"
        android:layout_width="109dp"
        android:layout_height="124dp"
        android:background="@android:color/transparent"
        android:elevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/button_back" />

    <ImageButton
        android:id="@+id/button_woman"
        android:layout_width="186dp"
        android:layout_height="234dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.185"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.527"
        app:srcCompat="@drawable/words_left_pers" />

    <ImageButton
        android:id="@+id/button_man"
        android:layout_width="182dp"
        android:layout_height="228dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.432"
        app:layout_constraintStart_toEndOf="@+id/button_woman"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.523"
        app:srcCompat="@drawable/words_right_pers" />

    <TextView
        android:id="@+id/name_woman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/merienda"
        android:text="@string/main_woman_name"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/button_woman"
        app:layout_constraintEnd_toEndOf="@+id/button_woman"
        app:layout_constraintHorizontal_bias="0.472"
        app:layout_constraintStart_toStartOf="@+id/button_woman"
        app:layout_constraintTop_toTopOf="@+id/button_woman"
        app:layout_constraintVertical_bias="0.864" />

    <TextView
        android:id="@+id/name_man"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/merienda"
        android:text="@string/main_man_name"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/button_man"
        app:layout_constraintEnd_toEndOf="@+id/button_man"
        app:layout_constraintHorizontal_bias="0.546"
        app:layout_constraintStart_toStartOf="@+id/button_man"
        app:layout_constraintTop_toTopOf="@+id/button_man"
        app:layout_constraintVertical_bias="0.854" />

</androidx.constraintlayout.widget.ConstraintLayout>