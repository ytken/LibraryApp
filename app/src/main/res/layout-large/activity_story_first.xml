<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageBackgr"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="fitXY"
        app:srcCompat="@color/white" />

    <ImageView
        android:id="@+id/imageWords"
        android:layout_width="match_parent"
        android:layout_height="1443dp"
        android:background="@android:color/transparent"
        android:elevation="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.427"
        app:srcCompat="@drawable/words_author_exp"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/textWords"
        android:layout_width="380dp"
        android:layout_height="512dp"
        android:elevation="4dp"
        android:fontFamily="@font/marta"
        android:gravity="center_vertical"
        android:padding="25dp"
        android:text="@string/hint_click_first_story"
        android:textColor="@color/primaryBlack"
        android:textSize="@dimen/words_text_size"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/imageWords"
        app:layout_constraintEnd_toEndOf="@+id/imageWords"
        app:layout_constraintHorizontal_bias="0.565"
        app:layout_constraintStart_toStartOf="@+id/imageWords"
        app:layout_constraintTop_toTopOf="@+id/imageWords"
        app:layout_constraintVertical_bias="0.481" />

    <ImageView
        android:id="@+id/imageViewLeft"
        android:layout_width="543dp"
        android:layout_height="272dp"
        android:elevation="1dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.347"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.863"
        app:srcCompat="@drawable/words_left_pers_exp" />

    <TextView
        android:id="@+id/textViewLeft"
        android:layout_width="326dp"
        android:layout_height="155dp"
        android:elevation="1dp"
        android:fontFamily="@font/marta"
        android:gravity="center"
        android:textColor="@color/primaryBlack"
        android:textSize="@dimen/names_text_size"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewLeft"
        app:layout_constraintEnd_toEndOf="@+id/imageViewLeft"
        app:layout_constraintHorizontal_bias="0.599"
        app:layout_constraintStart_toStartOf="@+id/imageViewLeft"
        app:layout_constraintTop_toTopOf="@+id/imageViewLeft"
        app:layout_constraintVertical_bias="0.358" />

    <ImageView
        android:id="@+id/imageViewRight"
        android:layout_width="543dp"
        android:layout_height="272dp"
        android:elevation="1dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.669"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.864"
        app:srcCompat="@drawable/words_right_pers_exp" />

    <TextView
        android:id="@+id/textViewRight"
        android:layout_width="326dp"
        android:layout_height="155dp"
        android:elevation="1dp"
        android:fontFamily="@font/marta"
        android:gravity="center"
        android:textColor="@color/primaryBlack"
        android:textSize="@dimen/names_text_size"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewRight"
        app:layout_constraintEnd_toEndOf="@+id/imageViewRight"
        app:layout_constraintHorizontal_bias="0.382"
        app:layout_constraintStart_toStartOf="@+id/imageViewRight"
        app:layout_constraintTop_toTopOf="@+id/imageViewRight"
        app:layout_constraintVertical_bias="0.324" />

    <TextView
        android:id="@+id/dialogClick"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageBackgr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/imageButtonLeftChoice"
        android:layout_width="417dp"
        android:layout_height="366dp"
        android:background="@color/transparent"
        android:elevation="8dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.298"
        app:srcCompat="@drawable/words_left_pers_exp" />

    <ImageView
        android:id="@+id/imageButtonRightChoice"
        android:layout_width="417dp"
        android:layout_height="366dp"
        android:background="@color/transparent"
        android:elevation="8dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.727"
        app:srcCompat="@drawable/words_left_pers_exp" />

    <TextView
        android:id="@+id/textViewLeftChoice"
        android:layout_width="270dp"
        android:layout_height="146dp"
        android:elevation="9dp"
        android:fontFamily="@font/marta"
        android:gravity="center"
        android:textColor="@color/primaryBlack"
        android:textSize="@dimen/names_text_size"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/imageButtonLeftChoice"
        app:layout_constraintEnd_toEndOf="@+id/imageButtonLeftChoice"
        app:layout_constraintHorizontal_bias="0.605"
        app:layout_constraintStart_toStartOf="@+id/imageButtonLeftChoice"
        app:layout_constraintTop_toTopOf="@+id/imageButtonLeftChoice"
        app:layout_constraintVertical_bias="0.454" />

    <TextView
        android:id="@+id/textViewRightChoice"
        android:layout_width="270dp"
        android:layout_height="146dp"
        android:elevation="9dp"
        android:fontFamily="@font/marta"
        android:gravity="center"
        android:textColor="@color/primaryBlack"
        android:textSize="@dimen/names_text_size"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/imageButtonRightChoice"
        app:layout_constraintEnd_toEndOf="@+id/imageButtonRightChoice"
        app:layout_constraintHorizontal_bias="0.659"
        app:layout_constraintStart_toStartOf="@+id/imageButtonRightChoice"
        app:layout_constraintTop_toTopOf="@+id/imageButtonRightChoice"
        app:layout_constraintVertical_bias="0.445" />

    <TextView
        android:id="@+id/clickerInner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="15dp"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/imageViewMan"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/charlie_cut"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/imageViewWoman"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/lia_cut" />

    <ImageView
        android:id="@+id/imageViewChar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/stiven_cut"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:visibility="gone"/>

    <ImageButton
        android:id="@+id/story_button_back_story"
        android:layout_width="140dp"
        android:layout_height="150dp"
        android:background="@android:color/transparent"
        android:elevation="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/button_back_exp" />

</androidx.constraintlayout.widget.ConstraintLayout>